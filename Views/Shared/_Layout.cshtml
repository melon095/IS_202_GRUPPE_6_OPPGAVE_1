<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gruppe6Oppgave1</title>

    <!-- Tailwind CSS via CDN -->                     @*  Gjør at det ser finere ut på siden, med tanke på at navnene er mer fremtredende *@
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Din egen CSS kan fortsatt lastes etter Tailwind om du trenger skreddersøm -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gruppe6Oppgave1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />

    @RenderSection("Styles", required: false)
</head>


<body class="min-h-screen flex flex-col bg-gray-50 text-gray-900">
    <header class="border-b bg-white">
        <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex h-16 items-center justify-between">
                <!-- Hjemmelogo med Gruppe6Oppgave1 i hjørnet-->
                <a asp-area="" asp-controller="Home" asp-action="Index"
                   class="text-lg font-semibold text-indigo-700 hover:text-indigo-800">
                    Gruppe6Oppgave1
                </a>

                <!-- Desktop links --> @*Dette legger til linkene til de forskjellige sidene, som home og privacy *@
                <div class="hidden md:flex md:items-center md:space-x-6">
                    <a asp-area="" asp-controller="Home" asp-action="Index"
                       class="text-sm font-medium text-gray-700 hover:text-indigo-700">Home</a>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy"
                       class="text-sm font-medium text-gray-700 hover:text-indigo-700">Privacy</a>
                    <a asp-area="" asp-controller="Map" asp-action="Index"
                       class="text-sm font-medium text-gray-700 hover:text-indigo-700">Map</a>
                </div>

                <!-- Mobile menu button -->  @* Dette legger til hamburgerbar, i mobilversjonen *@
                <button id="mobileMenuBtn"
                        class="md:hidden inline-flex items-center justify-center rounded-md p-2 ring-1 ring-gray-300 hover:bg-gray-100"
                        aria-label="Toggle navigation" aria-expanded="false">
                    <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
            <!-- Mobile menu -->  @* Dette legger til linkene i hamburger menyen *@
            <div id="mobileMenu" class="md:hidden hidden pb-3">
                <a asp-area="" asp-controller="Home" asp-action="Index"
                   class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100">Home</a>
                <a asp-area="" asp-controller="Home" asp-action="Privacy"
                   class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100">Privacy</a>
                <a asp-area="" asp-controller="Map" asp-action="Index"
                   class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100">Map</a>
            </div>
        </nav>
    </header>

    <div class="flex-1">
        <main role="main" class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t bg-white">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-4 text-sm text-gray-600">
            &copy; 2025 - Gruppe6Oppgave1 -
            <a asp-area="" asp-controller="Home" asp-action="Privacy"
               class="text-indigo-700 hover:underline">Privacy</a>
        </div>
    </footer>

    <!-- Valgfritt: Din egen JS -->    @* Dette legger til funksjonalitet til hamburger menyen *@
    <script>
        const btn = document.getElementById('mobileMenuBtn');
        const menu = document.getElementById('mobileMenu');
        btn?.addEventListener('click', () => {
            const isHidden = menu.classList.contains('hidden');
            menu.classList.toggle('hidden', !isHidden);
            btn.setAttribute('aria-expanded', String(isHidden));
        });
    </script>

    <script>
        src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js">
    </script>



    <style>

        .leaflet-map {
            height: 400px;
        }
    </style>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
